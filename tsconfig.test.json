{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "vitest/globals"],
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "**/*.test.*",
    "**/*.spec.*",
    "vitest.config.*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}